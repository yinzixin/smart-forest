@{
    ViewBag.Title = "Login";
    Layout = null;
}
@model SF.Web.Controllers.LoginModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="renderer" content="webkit" />
    <meta http-equiv="X-UA-Compatible" content="IE =edge,chrome =1" />
    <meta charset="UTF-8">
    <title>登录</title>
    <link href="/css/common.css?2" rel="stylesheet" />
    <link href="/css/page_login.css?3" rel="stylesheet" />
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="/vendor/jquery.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="bg-login">
    </div>
    @using (Html.BeginForm())
    {
        <div class="login-content">
            <p class="content-title">用户登陆</p>
            <div class="login-user content-line">
               @Html.TextBoxFor(m => m.User, new { placeholder = "用户名" })   
                 
            </div>
            <div class="login-password content-line">
                @Html.PasswordFor(m => m.Password, new { placeholder = "密码" })
                <div class="error-msg tl">
                     @Html.ValidationMessage("msg")
                </div>
            </div>
            <button class="btn btn-size">登陆</button>
        </div>
    }
</body>
</html>

 
